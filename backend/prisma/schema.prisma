generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  TEACHER
  ADMIN
}

enum PresenceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role
  sessions  Session[]
  createdAt DateTime @default(now())
}

model Class {
  id       Int       @id @default(autoincrement())
  name     String
  students Student[]
  sessions Session[]
}

model Student {
  id        Int        @id @default(autoincrement())
  firstName String
  lastName  String
  class     Class     @relation(fields: [classId], references: [id])
  classId   Int
  presences Presence[]
}

model Subject {
  id       Int       @id @default(autoincrement())
  name     String
  sessions Session[]
}

model Session {
  id         Int        @id @default(autoincrement())
  date       DateTime
  class      Class      @relation(fields: [classId], references: [id])
  classId    Int
  subject    Subject    @relation(fields: [subjectId], references: [id])
  subjectId  Int
  teacher    User       @relation(fields: [teacherId], references: [id])
  teacherId  Int
  presences  Presence[]
}

model Presence {
  id         Int            @id @default(autoincrement())
  status     PresenceStatus
  student    Student        @relation(fields: [studentId], references: [id])
  studentId  Int
  session    Session        @relation(fields: [sessionId], references: [id])
  sessionId  Int

  @@unique([studentId, sessionId])
}
